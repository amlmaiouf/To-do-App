@page
@model ToDoApp.Pages.CreateModel
@{
    ViewData["Title"] = "Add New Task";
}

<h2>Add New Task</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="NewTask.Description" class="control-label">Description</label>
        <input asp-for="NewTask.Description" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="NewTask.IsCompleted" class="form-check-input" />
        <label asp-for="NewTask.IsCompleted" class="form-check-label">Is Completed</label>
    </div>
    <button type="submit" class="btn btn-primary">Add Task</button>
</form>
